    <field name="key">custom_export_contract.external_layout_contract_header</field>
    <field name="arch" type="xml">
      <xpath expr="//div[contains(@class, 'header')]" position="replace">
        <div class="header">
          <div class="row">
            <div class="col-12 text-center">
              <h2>CÔNG TY TNHH CUNG ỨNG NHÂN LỰC NHÂN KIỆT</h2>
